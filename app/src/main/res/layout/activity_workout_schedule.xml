<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gym_background_blurred_dark"
    android:orientation="vertical"
    android:layout_gravity="clip_vertical"
    tools:context=".WorkoutSchedule">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8E8E8"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Workout Schedule"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="71dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/lvWorkouts"
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="10dp" />
            <Button
                android:id="@+id/btnAddWorkoutSchedule"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:backgroundTint="#0E853E"
                android:fontFamily="@font/poppins_medium"
                android:text="ADD WORKOUT SCHEDULE"
                android:textColor="#EDEDED"
                android:textSize="20sp"
                app:cornerRadius="2dp" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>