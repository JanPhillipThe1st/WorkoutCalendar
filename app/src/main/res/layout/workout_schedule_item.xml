<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#D029E3"
    android:layout_marginVertical="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tvDayOfWeek"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="TextView" />
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/tvDayCount"
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="TextView" />
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tvWorkoutName"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="TextView" />
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tvTargetMuscle"
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#F8F4EC"
                android:fontFamily="@font/poppins_medium"
                android:text="Delete"
                android:textColor="#D029E3"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="#D029E3"
                android:fontFamily="@font/poppins_medium"
                android:text="Edit"
                android:textColor="#DCF2F1"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>